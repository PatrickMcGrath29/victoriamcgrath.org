<section id="events">
  <div class="container">
    <% if @upcoming_events.present? %>
      <h2> Upcoming Events </h2>
    <% end %>
    <% if @past_events.present? %>
      <h2> Past Events </h2>
    <% end %>
    <% if admin_user? %>
      <%= link_to "New Event", new_event_path, class: "button" %>
    <% end %>
  </div>
</section>
