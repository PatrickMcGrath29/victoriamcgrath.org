<div class="container">
  <%= form_for(@event) do |f| %>
    <div class="form-row">
      <div class="form-input">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-input">
        <%= f.label :date_time %>
        <%= f.datetime_field :date_time %>
      </div>
      <div class="form-input">
        <%= f.label :location %>
        <%= f.text_field :location %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-input">
        <%= f.label :short_description %>
        <%= f.text_area :short_description, class: "tinymce" %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-input">
        <%= f.label :description %>
        <%= f.text_area :description, class: "tinymce" %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-input">
        <%= f.label :primary_image %>
        <%= f.text_field :primary_image %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-input">
        <%= f.label :images %>
        <%= f.text_area :images %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-input">
        <%= f.label :is_featured, "Featured Event" %>
        <%= f.check_box :is_featured %>
      </div>
    </div>
    <div class="form-row">
      <%= f.submit %>
    </div>
  <% end %>
</div>
<%= tinymce_assets %>
<%= tinymce %>
